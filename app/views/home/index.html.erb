<div id="home-left">
  
  <div id="home-links">
    <%= link_to_function 'What', "$('home-what').show();$('home-why').hide();$('home-how').hide();" %>
    <%= link_to_function 'Why', "$('home-what').hide();$('home-why').show();$('home-how').hide();" %>
    <%= link_to_function 'How', "$('home-what').hide();$('home-why').hide();$('home-how').show();" %>
  </div>
  
  <h2><%=t :tagline %></h2>
  
  <p><img src="/images/box.gif" /></p>
  <h3 id="home-what" class="home-copy"><%=t :home_what %></h3>
  <h3 id="home-why" class="home-copy" style="display:none;"><%=t :home_why %></h3>
  <h3 id="home-how" class="home-copy" style="display:none;"><%=t :home_how %></h3>
  
  <div id="start-link"><%= link_to t(:start_link), signup_path %></div>
  
</div>

<div id="home-right">
  
  <%= render :partial => 'sessions/form' %>
  
</div>

<div class="clear"> </div>