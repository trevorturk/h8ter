<div id="content-primary">
  <span id="large-gravatar">
    <a href="<%= profile_path(@message.user.login) %>">
      <%= gravatar_for @message.user, :size => 75, :class => 'gravatar', :valign => 'middle' %>
    </a>
  </span>
  <span id="large-user"><%= link_to @message.user.to_s + ' hates...', profile_path(@message.user.login) %></span>
  <div class="clear"> </div>
  <table class="messages messages-show" cellspacing="0">
    <tr class="message message-show">
      <td class="message-body">
        <%= auto_link(@message.body) {|m| truncate(m)} %>
        <span class="detail"><%= time_ago_in_words(@message.created_at) %> ago</span>
      </td>
    </tr>
  </table>
</div>

<div class="clear"> </div>