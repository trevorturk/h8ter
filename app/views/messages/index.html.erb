<div id="content-primary">
  <%= render :partial => 'messages/form' %>
  <table class="messages messages-index" cellspacing="0">
    <% @messages.each do |message| %>
      <tr class="message">
        <td class="message-user">
          <a href="<%= profile_path(message.user.login) %>">
            <%= gravatar_for message.user, :size => 48, :class => 'gravatar' %>
          </a>
        </td>
        <td class="message-body">
          <b><%= link_to message.user, profile_path(message.user.login) %></b>  
          <%= auto_link(message.body) {|m| truncate(m)} %>
          <span class="detail"><%= time_ago_in_words(message.created_at) %> ago</span>
        </td>
      </tr>
    <% end %>
  </table>
  <div class="paginate">
    <%= will_paginate @messages %>
  </div>
</div>

<div id="content-secondary">
  <div id="secondary-section">
    <span class="left">Hi,</span>
    <span class="right"><%= link_to 'your profile', profile_path(current_user.to_s) %></span>
    <div class="clear"> </div>
  </div>
  <span id="profile-gravatar">
    <a href="<%= profile_path(current_user.login) %>">
      <%= gravatar_for current_user, :size => 30, :class => 'gravatar' %>
    </a>
  </span>
  <span id="profile-login"><%= current_user %></span>
  <div id="secondary-section"><br /><span class="left">Haters</span><div class="clear"> </div></div>
  <%= render :partial => 'shared/users' %>
</div>

<div class="clear"> </div>
